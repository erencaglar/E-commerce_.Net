@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6"><h2 class="text-primary">Category List</h2></div>
        <div class="text-end col-6 ">
            <a asp-page="/categories/create"  class="btn btn-primary">
                Create New Category<i class="bi bi-plus-square"></i>
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead></thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderByDescending(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name </td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btnbtn-group" role="group">
                            <a asp-page="/Categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/Categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>